<!-- card-detail.ejs -->
<%- include('header.ejs') %>

<style>
  body {
    background: linear-gradient(to right, #c36ff3, #ffae66, #ffeb99);
    margin: 0;
    font-family: 'Roboto', 'Arial', sans-serif; /* Google Fonts에서 원하는 폰트로 변경하세요 */
    color: #333;
    text-align: center;
  }

  h1 {
    color: #fff;
    text-align: center;
    margin-top: 50px;
    font-size: 36px;
  }

  ul {
    list-style: none;
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
  }

  li {
    background-color: #fff;
    border-radius: 16px;
    margin: 20px;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease-in-out;
    overflow: hidden;
    width: 250px;
    text-align: center;
  }

  li:hover {
    transform: scale(1.05);
  }

  .image-container {
    width: 100%;
    height: 150px;
    overflow: hidden;
    border-top-left-radius: 16px;
    border-top-right-radius: 16px;
  }

  img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  strong {
    display: block;
    margin: 16px 0 8px;
    font-weight: bold;
    font-size: 18px;
    color: #333;
  }

  p {
    color: #555;
    margin-bottom: 20px;
    font-size: 14px;
  }
</style>

<!-- 여기서 result를 이용하여 원하는 정보를 출력 -->
<h1>선택된 카드 정보</h1>

<ul>
  <% if (result && result.length > 0) { %>
    <% result.forEach(card => { %>
      <li>
        <div class="image-container">
          <a href="<%= card.링크 %>">
            <img src="<%= card.이미지 %>" alt="카드 이미지">
          </a>
        </div>
        <strong>카드사:</strong> <%= card.카드사 %>
        <strong>상품명:</strong> <%= card.상품명 %>
        <p>부가 설명이 들어갈 수 있습니다.</p>
      </li>
    <% }) %>
  <% } else { %>
    <p>선택된 카드 정보가 없습니다.</p>
  <% } %>
</ul>

<%- include('footer.ejs') %>
<!-- card-detail.ejs -->
<%- include('header.ejs') %>

<!-- 여기서 result를 이용하여 원하는 정보를 출력 -->
<h1>선택된 카드 정보</h1>

<% if (result && result.length > 0) { %>
  <ul>
    <% result.forEach(card => { %>
      <li>
        <strong>카드사:</strong> <%= card.카드사 %>, 
        <strong>상품명:</strong> <%= card.상품명 %>
      </li>
    <% }) %>
  </ul>
<% } else { %>
  <p>선택된 카드 정보가 없습니다.</p>
<% } %>

<%- include('footer.ejs') %>

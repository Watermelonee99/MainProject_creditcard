<%-include('header.ejs')%>
      <% if(user_id){ %>
        <h1 class="display-4"><%=name%>님</h1>
        <p class="lead">당신의 소비내역을 입력해 주세요.</p>
        <div class="jumbotron">
          <form action = "/transactionProc" method="post">
              <nav aria-label="breadcrumb">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item active" aria-current="page">소비내역</li>
                  </ol>
              </nav>
              

              <% const choices = ['교통', '주유', '마트/편의점', '쇼핑', '푸드', '배달', '카페/디저트', '뷰티/피트니스', '생활요금', '의료', '애완동물', '자동차/하이패스', '레져/스포츠', '영화/문화', '항공',  '여행/숙박', '해외', '디지털구독', '교육/육아',  '기타']; %>


              <div class="row">
                <% for (let i = 0; i < choices.length; i++) { %>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label><%= choices[i] %> 금액</label>
                            <input type="number" name="<%= choices[i] %>" class="form-control" min="0" max="999999999999" placeholder="원" required>
                        </div>
                    </div>
                    <% if ((i + 1) % 4 === 0) { %>
                        </div>
                        <div class="row">
                    <% } %>
                <% } %>
              </div>


                
              
              
  
              <div class="form-group">
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" id="gridCheck" required>
                  <label class="form-check-label" for="gridCheck">
                    개인정보 수집 동의
                  </label>
                </div>
              </div>
              <button type="submit" href="/transactionProc" class="btn btn-primary">제출</button>
              <a class="btn btn-primary" href="/transaction_mydata" role="button">내 정보</a>
          </form> 
          <hr />
        </div>
        <a class="btn btn-primary btn-lg" href="/transaction_graph" role="button">시각화 버튼</a>

        








      <%} else{ %>
        <p class="lead">로그인이 필요합니다</p>
        <a class="btn btn-primary btn-lg" href="/translogin" role="button">로그인!</a>
      <%} %>
      
      
<%-include('footer.ejs')%>
